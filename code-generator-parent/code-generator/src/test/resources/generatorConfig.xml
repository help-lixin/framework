<!DOCTYPE generatorConfiguration PUBLIC
 "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
 "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <context id="simple" targetRuntime="MyBatis3Simple">
  	<plugin type="help.lixin.framework.codegen.plugins.ServiceCodeGeneratorPlugin">
  		<property name="targetProject" value="${projectPath}/${service.targetProject}"/>
  		<property name="targetPackage" value="${service.targetPackage}"/>
  	</plugin>
  	<plugin type="help.lixin.framework.codegen.plugins.ControllerCodeGeneratorPlugin">
  		<property name="targetProject" value="${projectPath}/${controller.targetProject}"/>
  		<property name="targetPackage" value="${controller.targetPackage}"/>
  	</plugin>
	<jdbcConnection driverClass="${driverClass}"
					  connectionURL="${url}" userId="${username}" password="${password}"/>
    <javaModelGenerator targetPackage="${model.targetPackage}" targetProject="${projectPath}/${model.targetProject}">
    	<property name="enableSubPackages" value="true"/>
    	<property name="trimStrings" value="true"/>
    </javaModelGenerator>
    <sqlMapGenerator targetProject="${projectPath}/${mapper.targetProject}" targetPackage="${mapper.targetPackage}" />

    <javaClientGenerator type="XMLMAPPER" targetProject="${projectPath}/${mapper.xml.targetProject}" targetPackage="${mapper.xml.targetPackage}" />
	<!-- 留一个的目的是为了让xml能校验通过 -->
    <table tableName="t_order_1" schema="t_order" domainObjectName="Order" mapperName="OrderMapper" modelType="hierarchical" />
  </context>
</generatorConfiguration>