<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="help.lixin.framework.mybatis.mapper.LanguageMapper">
	<select id="query"  resultType="map">
		SELECT * FROM ${_db}.${_tablePrefix}language 
		WHERE id = #{arg0} 
	</select>
	
	<insert id="save" parameterType="help.lixin.framework.mybatis.model.Language">
		INSERT INTO ${_db}.${_tablePrefix}language(id,name,code) VALUES(#{id},#{name},#{code})
	</insert>
</mapper>
